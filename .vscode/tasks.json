{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 建置使用中檔案",
            "command": "cc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "偵錯工具產生的工作。"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: Make",
            "command": "make",
            "args": [
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "編譯器: make"
        }
    ],
    "version": "2.0.0"
}